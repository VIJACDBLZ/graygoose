<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
    <!--Normal mode jobs-->
    <cron>
        <url>/cron/sites?action=checkSites</url>
        <description>Check sites</description>
        <schedule>every 1 minutes</schedule>
    </cron>
    <cron>
        <url>/cron/events?action=removeOld</url>
        <description>Remove old events with 'SUCCESS' status from the data storage</description>
        <!--To prevent App Engine deadline exception there is a limited number (100 by default) of records
        to remove per single action. So if your application generates more events for specified amount of time,
        you must reduce this interval.-->
        <schedule>every 15 minutes</schedule>
    </cron>

    <!--Used for technical needs-->
    <!--<cron>
        <url>/cron/events?action=removeAll</url>
        <description>Remove all events</description>
        <schedule>every 1 minutes</schedule>
    </cron>-->
</cronentries>